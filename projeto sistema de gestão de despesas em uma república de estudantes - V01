void pausa() {
    sleep(60); // Pausa por 1 minuto
}



char menu_principal(void){  
  char op;  
  do{
     op = tela_menu_principal();
    switch(op){ 
      case '1': 
        aluno(); 
        pausa();
        break; 
      case '2':  
        tela_sobre(); 
        pausa();
        break;  
      case '3': 
       tela_relatorios(); 
       pausa();
       break; 
      case '4': 
       avisos_da_semana(); 
       pausa();
       break; 
      case '5': 
       despesas(); 
       pausa();
       break;
    }
  } while (op != '0');
  return 0; 
}



