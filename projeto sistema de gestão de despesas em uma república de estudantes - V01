//Feito com ajuda do ChatGPT
typedef struct {
    char nome[50];
    char data_nascimento[10]; 
    char cpf[10]; 
    char celular[12];
    char status;
} Aluno;
 

Aluno alunos[100];
int total_alunos = 0;

char excluir_logico(char *cpf) {
     for (int i = 0; i < total_alunos; i++) {
         if (strcmp(alunos[i].cpf, cpf) == 0) {
             alunos[i].status = "0"; 
             break;
         }
     } 
  return 0;
}



 char excluir_fisico(char *cpf) {
     int index = -1;
     for (int i = 0; i < total_alunos; i++) {
         if (strcmp(alunos[i].cpf, cpf) == 0) {
             index = i;
             break;
         }
     }

     if (index != -1) {
         for (int i = index; i < total_alunos - 1; i++) {
             alunos[i] = alunos[i + 1];
         }
         total_alunos--;
     } 
   return 0;
 }



 // Função para salvar os dados em um arquivo binário
 char salvar_dados() {
     FILE *file = fopen("alunos.bin", "wb");
     if (file != NULL) {
         fwrite(alunos, sizeof(Aluno), total_alunos, file);
         fclose(file);
     } 
    return 0;
 }



 // Função para carregar os dados de um arquivo binário
 char carregar_dados() {
     FILE *file = fopen("alunos.bin", "rb");
     if (file != NULL) {
         total_alunos = fread(alunos, sizeof(Aluno), 100, file);
         fclose(file);
     } 
   return 0;
 } 
char recuperar_excluidos() {
     for (int i = 0; i < total_alunos; i++) {
         if (alunos[i].status == 0) {
             alunos[i].status = 1;
         }
     } 
  return 0;
}





//Feito com a ajuda do ChatGPT
typedef struct {
    char id_pagamento[50];
    double valor;
    char data_pagamento[10];
    int status; // 0 para inativo, 1 para ativo
} Pagamento;

Pagamento pagamentos[100]; 
int total_pagamentos = 0;

void excluir_logico1(char *id_pagamento) {
    for (int i = 0; i < total_pagamentos; i++) {
        if (strcmp(pagamentos[i].id_pagamento, id_pagamento) == 0) {
            pagamentos[i].status = 0;
            break;
        }
    }
}

void excluir_fisico1(char *id_pagamento) {
    int index = -1;
    for (int i = 0; i < total_pagamentos; i++) {
        if (strcmp(pagamentos[i].id_pagamento, id_pagamento) == 0) {
            index = i;
            break;
        }
    }

    if (index != -1) {
        for (int i = index; i < total_pagamentos - 1; i++) {
            pagamentos[i] = pagamentos[i + 1];
        }
        total_pagamentos--;
    }
}

// Função para salvar os dados em um arquivo binário
void salvar_dados1() {
    FILE *file = fopen("pagamentos.bin", "wb");
    if (file != NULL) {
        fwrite(pagamentos, sizeof(Pagamento), total_pagamentos, file);
        fclose(file);
    }
}

// Função para carregar os dados de um arquivo binário
void carregar_dados1() {
    FILE *file = fopen("pagamentos.bin", "rb");
    if (file != NULL) {
        total_pagamentos = fread(pagamentos, sizeof(Pagamento), 100, file);
        fclose(file);
    }
}
void recuperar_excluidos1() {
    for (int i = 0; i < total_pagamentos; i++) {
        if (pagamentos[i].status == 0) {
            pagamentos[i].status = 1;
        }
    }
}



typedef struct {
    int id;
    char nome[50];
    int adicionar_pagamento;
} pagamento;

void excluir_logica(pagamento pagamentos[], int tamanho, int id) {
    for (int i = 0; i < tamanho; i++) {
        if (pagamentos[i].id == id) {
            pagamentos[i].adicionar_pagamento = 0;
            break;
        }
    }
}

void excluir_fisica(pagamento pagamentos[], int *tamanho, int id) {
    int indice = -1;
    for (int i = 0; i < *tamanho; i++) {
        if (pagamentos[i].id == id) {
            indice = i;
            break;
        }
    }

    if (indice != -1) {
        for (int i = indice; i < *tamanho - 1; i++) {
            pagamentos[i] = pagamentos[i + 1];
        }
        (*tamanho)--;
    }
}

void recuperar_excluidos_1(pagamento pagamentos[], int tamanho) {
    for (int i = 0; i < tamanho; i++) {
        if (pagamentos[i].adicionar_pagamento == 0) {
            pagamentos[i].adicionar_pagamento = 1;
        }
    }
}

int pag() {
    pagamento pagamentos[10];
    int tamanho = 10;

    // Adicione os pagamentos aqui

    // Excluir lógica
    excluir_logica(pagamentos, tamanho, 1);

    // Excluir física
    excluir_fisica(pagamentos,&tamanho, 2);

    // Recuperar excluídos
    recuperar_excluidos(pagamentos, tamanho); 
    return 0;
} 

