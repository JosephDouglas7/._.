char moduloAluno(void) {
    char opcao;
    do {
        opcao = aluno();
        switch(opcao) { 
            case '1': 	cadastrar_aluno();  
                        break;
            case '2': 	tela_pesquisar_aluno();
                        break;
            case '3': 	tela_Alterar_Aluno();
                        break;
            case '4': 	tela_Excluir_Aluno();
                        break;
        } 		
    } while (opcao != '0'); 
    return 0;
}


