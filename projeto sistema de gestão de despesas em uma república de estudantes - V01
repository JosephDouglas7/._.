#include<stdio.h> 
#include<stdlib.h> 
#include "util.h" 
#include<unistd.h> 

typedef struct {
    char nome[50];
    char data_nascimento[10];
    char cpf[11];
} Aluno;

Aluno alunos[100]; // Array para armazenar até 100 alunos
int total_alunos = 0; // Variável para acompanhar o número total de alunos

typedef struct {
    char data[10];
    float valor;
} Pagamento;

Pagamento pagamentos[100]; // Array para armazenar até 100 pagamentos
int total_pagamentos = 0; // Variável para acompanhar o número total de pagamentos 

char menu_principal(void);
char tela_menu_principal(void); 
char funcao_aluno(void);
char aluno(void); 
char cadastrar_aluno(void);  
void alunos_cadastrados(void);
void tela_sobre(void); 
void tela_equipe(void);  
char funcao_tela_relatorios(void);
char tela_relatorios(void); 
char tela_relatorios2(void); 
char resp_relat2(void); 
char resp_relat3(void); 
char resp_relat4(void);
char avisos_da_semana(void);  
char despesas(void); 
char saldo_atual(void); 
char adicionar_pagamento(void); 
char pagamentos_atuais(void);  



int main(void){ 

 menu_principal(); 
 tela_menu_principal();
 aluno(); 
 cadastrar_aluno();  
 alunos_cadastrados();
 tela_sobre(); 
 tela_equipe(); 
 tela_relatorios(); 
 tela_relatorios2(); 
 resp_relat2(); 
 resp_relat3(); 
 resp_relat4();
 avisos_da_semana();  
 despesas(); 
 saldo_atual(); 
 adicionar_pagamento(); 
 pagamentos_atuais(); 
 return 0; 
} 


//feito com a ajuda do Chat GPT
void pausa() {
    sleep(60); // Pausa por 1 minuto
}

char menu_principal(void){  
  char op;  
  do{
     op = tela_menu_principal();
    switch(op){ 
      case '1': 
        aluno(); 
        pausa();
        break; 
      case '2':  
        tela_sobre(); 
        pausa();
        break;  
      case '3': 
       tela_relatorios(); 
       pausa();
       break; 
      case '4': 
       avisos_da_semana(); 
       pausa();
       break; 
      case '5': 
       despesas(); 
       pausa();
       break;
    }
  } while (op != '0');
  return 0; 
}



char tela_menu_principal (void){  
  char op; 
  system("clear||cls");
  printf("\n# Universidade Federal do Rio Grande do Norte #"); 
  printf("\n#   Centro de Ensino Superior do Seridó     #"); 
  printf("\n#   Departamento de Computação e Tecnologia #"); 
  printf("\n#       Disciplina DCT1106 -- Programação   #"); 
  printf("\n#    Projeto Sistema de gestão de despesas  #"); 
  printf("\n#           em uma República de Estudantes  #"); 
  printf("\n#             Developed by @josephdouglas   #"); 
  printf("\n#             since agost,2023              #"); 
  printf("\n#    -- Sistema de gestão de despesas --    #"); 
  printf("\n#                                           #");
  printf("\n#           1. Aluno                        #"); 
  printf("\n#           2. Sobre o programa             #"); 
  printf("\n#           3. Relatórios                   #"); 
  printf("\n#           4. Avisos da Semana             #"); 
  printf("\n#           5. Despesas                     #");
  printf("\n Qual sua opção?:");   
  scanf("%c", &op); 
  return op;
} 

//feito com a ajuda do Chat GPT
char aluno(void){ 
  char op; 
  do {
    system("clear||cls");
    printf("\n#   --  Área do aluno --     #"); 
    printf("\n# 1.Cadastrar aluno          #"); 
    printf("\n# 2.Alunos cadastrados       #"); 
    printf("\n# 3.Voltar ao menu principal #"); 
    printf("\n# 4.Voltar à opção anterior  #");
    printf("\nQual sua opção?:              "); 
    scanf("%c", &op);  
    getchar();

    switch(op) {
      case '1':
        cadastrar_aluno(); 
        pausa();
        break;
      case '2':
        alunos_cadastrados(); 
        pausa();
        break;
      default:
        printf("\nOpção inválida!\n");
    }
  } while(op != '3');
  
  return op;
}


//Feito com ajuda do ChatGPT
char cadastrar_aluno(void) { 
    char op;  

    do {
        system("clear||cls");
        printf("\n# -- Cadastro de alunos --   #");
        printf("\nNome_do_aluno:                ");  
        scanf("%s", alunos[total_alunos].nome);
        printf("\nData de nascimento:           "); 
        scanf("%s", alunos[total_alunos].data_nascimento);
        printf("\nCPF:                          "); 
        scanf("%s", alunos[total_alunos].cpf);
        printf("\n1.Voltar ao menu principal    ");
        printf("\n2.Confirmar cadastro          ");
        printf("\nQual sua opção?:              "); 
        scanf (" %c", &op);   
        getchar(); 

        switch(op) {
            case '1':
                tela_menu_principal();
                break;
            case '2':
                printf("\nAluno cadastrado com sucesso!\n");
                total_alunos++;
                pausa();
                break;
            default:
                printf("\nOpção inválida!\n");
        }
    } while(op != '1' && op != '2');

    return 0;
}


void alunos_cadastrados(void){  
  char op; 

  do{
    system("clear||cls");
    printf("\n## Alunos Cadastrados ##"); 
    for(int i = 0; i < total_alunos; i++) {
        printf("\n %s             #", alunos[i].nome); 
    }

    printf("\n1.Voltar ao menu principal");
    printf("\nQual sua opção?:              "); 
    scanf ("%c",&op);   
    getchar(); 

    switch(op){ 
      case '1': 
          tela_menu_principal();
          pausa();
          break;
        default:
          printf("\nOpção inválida!\n");
      }
  } while(op != '3');
}


